{
  "name": "Belmont weather station",
  "description": "Change browser action color when its icon is clicked",
  "version": "1.3.2",
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs", "idle","notifications","contextMenus","http://*/*", "alarms", "storage"
  ],
  "browser_action": {
      "name": "Click to change the icon's color",
	  "default_popup": "popup.html"
  },
    "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
